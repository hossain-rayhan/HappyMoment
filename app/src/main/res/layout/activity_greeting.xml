<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relative">

    <ImageView
        android:id="@+id/img_greeting"
        android:layout_above="@+id/et_greetings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/greetings"
        android:layout_margin="@dimen/dp_5"/>

    <EditText
        android:id="@id/et_greetings"
        android:layout_above="@+id/ll_bottom_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_5"
        android:hint="Type your greetings here.." />

    <LinearLayout
        android:id="@id/ll_bottom_share"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_5"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/fb_icon"
            android:src="@drawable/fb_icon"
            android:paddingLeft="5dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/twitter_icon"
            android:src="@drawable/twitter_icon"
            android:paddingLeft="5dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/instagram_icon"
            android:src="@drawable/instragram"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </LinearLayout>


</RelativeLayout>
